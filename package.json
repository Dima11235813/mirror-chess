{
  "name": "mirror-chess",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview --strictPort --port 5173",
    "prepreview": "npm run build",
    "test": "vitest run --config vitest.unit.config.ts",
    "test:watch": "vitest --config vitest.unit.config.ts",
    "test:coverage": "vitest run --coverage --config vitest.unit.config.ts",
    "test:watch:coverage": "vitest --coverage --config vitest.unit.config.ts",
    "test:int": "vitest run --config vitest.int.config.ts",
    "test:int:watch": "vitest --config vitest.int.config.ts",
    "test:int:coverage": "vitest run --coverage --config vitest.int.config.ts",
    "test:int:watch:coverage": "vitest --coverage --config vitest.int.config.ts",
    "e2e:preview": "vite preview --strictPort --port 5173",
    "e2e": "playwright test",
    "e2e:headed": "playwright test --headed --project=chromium",
    "e2e:debug": "playwright test --headed --debug",
    "relock": "npm run clean && npm run i:deps && npm run i:devdeps",
    "preclean": "node -e \"try{require('child_process').execSync(process.platform==='win32'?'taskkill /F /IM node.exe /T':'pkill -f node',{stdio:'ignore'})}catch(e){}\"",
    "clean": "npm run preclean && rimraf node_modules package-lock.json",
    "i:deps": "npm i --save-exact @ionic/react@latest @ionic/react-router@latest ionicons@latest react@latest react-dom@latest react-router-dom@5",
    "i:devdeps": "npm i -D --save-exact @types/react@latest @types/react-dom@latest @vitejs/plugin-react@latest typescript@latest vite@latest vitest@latest"
  },
  "dependencies": {
    "@ionic/react": "8.7.2",
    "@ionic/react-router": "8.7.2",
    "ionicons": "8.0.13",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "react-router-dom": "5.3.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.2.1",
    "@types/react": "latest",
    "@types/react-dom": "latest",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vitejs/plugin-react": "latest",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-unused-imports": "^4.1.4",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "typescript": "latest",
    "vite": "latest",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "latest"
  }
}
